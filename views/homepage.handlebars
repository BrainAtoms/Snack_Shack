{{#each recipes as |recipe|}}
<div class="row mb-4 recipe">
  <div class="col-md-5">
    <h2>
      <a href="/recipe/{{recipe.id}}">{{recipe.title}}</a>
    </h2>
    <p>
      <span for="img">{{recipe.image}}</span>
      <span class="time">{{recipe.time}}</span>
    </p>
    <p>Created by {{recipe.user.name}} on {{format_date recipe.date_created}}</p>
  </div>
</div>
{{/each}}