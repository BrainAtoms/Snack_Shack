<section class="container columns-2">
{{#each recipes as |recipe|}}
<div class="flex justify-center row mb-4 recipe">
  <div>
    <h2>
      <a class="flex justify-center" href="/recipe/{{recipe.id}}">{{recipe.title}}</a>
    </h2>
    <a href="/recipe/{{recipe.id}}">
      {{{recipe.image}}}
      </a>
      <span class="time">Time to make (hours, minutes, seconds): {{recipe.time}}</span>
    <p align="center">Created by {{recipe.user.name}} on {{format_date recipe.date_created}}</p>
  </div>
</div>
{{/each}}
</section>