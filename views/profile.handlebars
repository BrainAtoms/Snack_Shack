<div class="row mt-4">
  <div class="col-md-6">
    <h3>Submit new recipe:</h3>

    <form class="form new-recipe-form">
      <div class="form-group">
        <label for="recipe-name">Recipe name:</label>
        <input
          class="form-input"
          type="text"
          id="recipe-name"
          name="recipe-name"
        />
        <div class="form-group">
        <label for="recipe-category">category:</label>
        <textarea
          class="form-input"
          id="recipe-category"
          name="recipe-category"
        ></textarea>
      </div>
      </div>
      <div class="form-group">
        <label for="recipe-time">How long does it take to make your recipe?:</label>
        <input
          class="form-input"
          type="text"
          id="recipe-time"
          name="recipe-time"
        />
      </div>
      <div class="form-group">
        <label for="avatar">Choose an image for your recipe:</label>
        <br />
        <input
          type="file"
          id="avatar"
          name="avatar"
          accept="image/png, image/jpeg"
        />
      </div>
      <div class="form-group">
        <label for="recipe-ing">ingredients:</label>
        <textarea
          class="form-input"
          id="recipe-ing"
          name="recipe-ing"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="recipe-dir">directions:</label>
        <textarea
          class="form-input"
          id="recipe-dir"
          name="recipe-dir"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>

  {{#if recipes.length}}
    <div class="col-md-6 recipe-list">
      <h3>Current Recipes:</h3>

      {{#each recipes as |recipe|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/recipe/{{recipe.id}}">{{recipe.name}}</a></h4>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>