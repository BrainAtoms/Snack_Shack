<div class="row mt-4">
  <div class="col-md-6">
    <h3>Submit new recipe:</h3>

    <form class="form new-recipe-form">
      <div class="form-group">
        <label for="recipe-name">Recipe name:</label>
        <input
          class="form-input"
          type="text"
          id="recipe-name"
          name="recipe-name"
        />
        <div class="form-group">
        <label for="recipe-category">Category:</label>
        <input
          class="form-input"
          id="recipe-category"
          name="recipe-category"
        />
      </div>
      </div>
      <div class="form-group">
        <label for="recipe-time">How long does it take to make your recipe? (00:00:00):</label>
        <input
          class="form-input"
          type="text"
          id="recipe-time"
          name="recipe-time"
        />
      </div>
      <div class="form-group">
        <label for="avatar">Link an image for your recipe:</label>
        <br />
        <input type="url" name="url" id="url"
       placeholder="image link"
       pattern="https://.*" size="30"
       required>
      </div>
      <div class="form-group">
        <label for="recipe-ing">Ingredients:</label>
        <textarea
          class="form-input"
          id="recipe-ing"
          name="recipe-ing"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="recipe-dir">Directions:</label>
        <textarea
          class="form-input"
          id="recipe-dir"
          name="recipe-dir"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>

  {{#if recipes.length}}
    <div class="col-md-6 recipe-list">
      <h3>Current Recipes:</h3>

      {{#each recipes as |recipes|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/recipe/{{recipes.id}}">{{recipes.title}}</a></h4>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
